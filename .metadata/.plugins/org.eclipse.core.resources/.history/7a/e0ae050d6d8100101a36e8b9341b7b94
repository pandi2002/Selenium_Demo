package testNG;

import java.io.File;
import java.io.IOException;
import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.OutputType;
import org.openqa.selenium.TakesScreenshot;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.annotations.AfterTest;
import org.testng.annotations.BeforeTest;
import org.testng.annotations.Parameters;
import org.testng.annotations.Test;

import com.google.common.io.Files;

public class DemoBlazeTask {
	WebDriver driver;
	@Parameters({"user","Password"})
	@Test
	public void login(String user,String Password) throws IOException {
		driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(5));
		WebElement uname=driver.findElement(By.id("sign-username"));
		uname.sendKeys(user);
		WebElement userpwd=driver.findElement(By.id("sign-password"));
		userpwd.sendKeys(Password);
		WebElement signup=driver.findElement(By.id("//button[@onclick='register()']"));
		signup.click();
		File fr=((TakesScreenshot)driver).getScreenshotAs(OutputType.FILE);
		Files.copy(fr, new File("C:\\ScreenShot\\img.jpeg"));

	}
	@BeforeTest
	public void beforelogin() {
		driver=new ChromeDriver();
		driver.get("https://demoblaze.com/");
		driver.manage().window().maximize();
		driver.findElement(By.id("signin2")).click();

	}
	@AfterTest
	public void afterrlogin() {
		driver.close();

	}
}
